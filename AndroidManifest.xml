<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.waleson.sneltrein"
    android:versionCode="26"
    android:versionName="3.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.waleson.sneltrein.STApplication"
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="SnelTrein" >
        <activity
            android:name="com.waleson.sneltrein.activities.SnelTrein"
            android:configChanges="orientation|keyboardHidden"
            android:label="SnelTrein" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.waleson.sneltrein.activities.Preferences"
            android:label="@string/preferences" >
        </activity>
        <activity
            android:name="com.waleson.sneltrein.activities.Disruptions"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/disruptions" >
        </activity>
        <activity
            android:name="com.waleson.sneltrein.activities.StationSelector"
            android:label="@string/act_station_chooser_label" >
        </activity>
        <activity
            android:name="com.waleson.sneltrein.activities.JourneySelector"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_trip_details_label" >
        </activity>
        <activity
            android:name="com.waleson.sneltrein.activities.StationDepartures"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_station_details_label" >
        </activity>
    </application>

    <uses-sdk android:minSdkVersion="4" />

</manifest>
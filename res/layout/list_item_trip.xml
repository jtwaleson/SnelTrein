

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:weightSum="8" android:id="@+id/LinearLayout01"
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center_vertical|center_horizontal"
android:drawable="@drawable/selector"
android:background="@drawable/selector"
android:clickable="true"
android:longClickable="true"
android:focusable="true">
  <ImageView 
      android:id="@+id/ImageView" android:src="@drawable/jog_tab_target_gray" android:layout_width="0dp" android:gravity="center_vertical|center_horizontal" android:layout_weight="1" android:layout_height="wrap_content"></ImageView>
  <TextView android:text="@+id/TextViewTrip" android:id="@+id/TextViewTrip" android:layout_width="0dp" android:layout_weight="6"  android:layout_height="wrap_content"
    android:padding="10dp"
    android:textSize="18sp"></TextView>
<TextView
	android:id="@+id/TVHits2"
    android:layout_width="0sp"
    android:layout_weight="1"
    android:layout_height="fill_parent"
    style="@style/ExtraItalic"
    android:gravity="center"
    android:textColor="#666666"
	></TextView>
  <ImageView 
      android:id="@+id/ImageView2" 
      android:src="@drawable/ic_menu_recent_history"
      android:layout_width="0dp"
      android:gravity="center_vertical|center_horizontal"
      android:layout_weight="1" 
      android:layout_height="wrap_content"
      android:visibility="gone"
      ></ImageView>
    

</LinearLayout>
